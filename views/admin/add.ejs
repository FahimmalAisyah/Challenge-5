<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Tambah Mobil</h1>

    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <a href="/add" class="btn btn-sm btn-outline-secondary">+ Tambah mobil</a>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard </a></li>
                    <li class="breadcrumb-item active">Mobil Baru</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>UserId</b>
        </div>
    </div>
</div>

<form action="/add" method="POST">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="nama">Nama Mobil</label>
            <input type="text" name="nama" id="nama" class="form-control" placeholder="Nama Mobil" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="sewa">Sewa</label>
            <input type="text" name="sewa" id="sewa" class="form-control" placeholder="harga sewa" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="ukuran">Ukuran</label>
            <input type="text" name="ukuran" id="ukuran" class="form-control" placeholder="Besar/Sedang/Kecil" required>
        </div>
    </div>


    <div class="row form-group mb-4">
            <button type="submit" class="btn btn-primary">Tambah Mobil</button>
    </div>

</form>